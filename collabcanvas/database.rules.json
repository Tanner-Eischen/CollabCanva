{
  "rules": {
    "users": {
      "$userId": {
        "canvases": {
          ".read": "$userId === auth.uid",
          ".write": "$userId === auth.uid"
        }
      }
    },
    "canvases": {
      "$canvasId": {
        "objects": {
          ".read": "auth != null && root.child('canvases').child($canvasId).child('permissions').child(auth.uid).exists()",
          ".write": "auth != null && (root.child('canvases').child($canvasId).child('permissions').child(auth.uid).child('role').val() === 'owner' || root.child('canvases').child($canvasId).child('permissions').child(auth.uid).child('role').val() === 'editor')"
        },
        "groups": {
          ".read": "auth != null && root.child('canvases').child($canvasId).child('permissions').child(auth.uid).exists()",
          ".write": "auth != null && (root.child('canvases').child($canvasId).child('permissions').child(auth.uid).child('role').val() === 'owner' || root.child('canvases').child($canvasId).child('permissions').child(auth.uid).child('role').val() === 'editor')"
        },
        "permissions": {
          ".read": "auth != null",
          "$userId": {
            ".write": "root.child('canvases').child($canvasId).child('permissions').child(auth.uid).child('role').val() === 'owner'"
          }
        }
      }
    },
    "presence": {
      "$canvasId": {
        ".read": "auth != null",
        "$userId": {
          ".write": "$userId === auth.uid"
        }
      }
    }
  }
}