{
  "rules": {
    "users": {
      "$userId": {
        "canvases": {
          ".read": "$userId === auth.uid",
          ".write": "$userId === auth.uid"
        }
      }
    },
    "canvases": {
      "$canvasId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "canvas": {
      "$canvasId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "collab-spaces": {
      "$spaceId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "presence": {
      "$canvasId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "$userId": {
          ".write": "$userId === auth.uid"
        }
      }
    },
    "collab-presence": {
      "$canvasId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "$userId": {
          ".write": "$userId === auth.uid"
        }
      }
    },
    "tilemaps": {
      "$canvasId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "assetFolders": {
      ".read": "auth != null && ((query.orderByChild == 'userId' && query.equalTo == auth.uid) || query.equalTo == null)",
      "$folderId": {
        ".read": "auth != null && data.child('userId').val() == auth.uid",
        ".write": "auth != null && ((data.exists() && data.child('userId').val() == auth.uid) || (!data.exists() && newData.child('userId').val() == auth.uid))"
      }
    },
    "assets": {
      ".read": "auth != null",
      ".indexOn": ["userId"],
      "$assetId": {
        ".write": "auth != null && ((data.exists() && data.child('userId').val() == auth.uid) || (!data.exists() && newData.child('userId').val() == auth.uid))",
        ".validate": "newData.hasChildren(['userId', 'name', 'type', 'url', 'createdAt'])"
      }
    },
    "catalog": {
      "tilesets": {
        "$userId": {
          ".read": "$userId === auth.uid",
          ".write": "$userId === auth.uid"
        }
      },
      "index": {
        "$userId": {
          ".read": "$userId === auth.uid",
          ".write": "$userId === auth.uid"
        }
      }
    },
    "animations": {
      "$canvasId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    }
  }
}