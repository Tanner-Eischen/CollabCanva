{
  "rules": {
    "users": {
      "$userId": {
        "canvases": {
          ".read": "$userId === auth.uid",
          ".write": "$userId === auth.uid"
        }
      }
    },
    "canvases": {
      "$canvasId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "canvas": {
      "$canvasId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "collab-spaces": {
      "$spaceId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "presence": {
      "$canvasId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "$userId": {
          ".write": "$userId === auth.uid"
        }
      }
    },
    "collab-presence": {
      "$canvasId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "$userId": {
          ".write": "$userId === auth.uid"
        }
      }
    },
    "tilemaps": {
      "$canvasId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "assets": {
      "$userId": {
        ".read": "$userId === auth.uid",
        ".write": "$userId === auth.uid"
      }
    },
    "catalog": {
      "tilesets": {
        "$userId": {
          ".read": "$userId === auth.uid",
          ".write": "$userId === auth.uid"
        }
      },
      "index": {
        "$userId": {
          ".read": "$userId === auth.uid",
          ".write": "$userId === auth.uid"
        }
      }
    },
    "animations": {
      "$canvasId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    }
  }
}